<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="http://www.springframework.org/schema/mvc
 http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
 http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
 http://www.springframework.org/schema/context
 http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
    <context:component-scan base-package="com.javiagd.nexmo.rest.controller" />
    <mvc:annotation-driven />
    
    <bean
        class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>
    
    <context:property-placeholder properties-ref="deployProperties" />
    
    <mongo:mongo id="mongo" />
    
 	<!-- Activate Spring Data MongoDB repository support -->
  	<mongo:mapping-converter base-package="com.javiagd.nexmo.models" />
  	
  	<!-- MongoDB host -->
	<mongo:mongo host="${mongo.host.name}" port="${mongo.host.port}" user="{mongo.db.user} password="{mongo.db.password}"/>
 
	<!-- Template for performing MongoDB operations -->
  	<bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate" 
  			c:mongo-ref="mongo" c:databaseName="${mongo.db.name}"/>
	
	<!-- Service for initializing MongoDB with sample data using MongoTemplate -->
	<bean id="initMongoService" class="org.krams.service.InitMongoService" init-method="init"/>	
    
</beans>